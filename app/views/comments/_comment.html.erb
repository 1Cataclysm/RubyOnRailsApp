<% unless comment.archived? %>
  <p>
    <strong>Commentateur :</strong>
    <%= comment.commenter %>
  </p>
  <p>
    <strong>Avi :</strong>
    <%= comment.body %>
  </p>

  <p>
  <strong>Note :</strong>
  <%= comment.note %>
  </p>  

  <p>
    <%= link_to "Supprimer le commentaire", [comment.article, comment], data: {
                  turbo_method: :delete,
                  turbo_confirm: "Are you sure?"
                } %>
  </p>
<% end %>
